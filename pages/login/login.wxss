#container{
    position: absolute;
    height: 100%;
    width:100%;
    background:linear-gradient(#FDFDFD,#DCDCDC);
}
#login-box{
    height: 70%;
    width:90%;
    position: absolute;
    left: 5%;
    top:10%;
    border:1px red solid;
}
#logo{
    height: 20%;
    width:26%;
    margin-left: 37%;
    border:1px red solid;
    border-radius:150rpx;
}
#info-box{
    height:40%;
    width:80%;
    margin-top: 5%;
    margin-left: 10%;
}
#button-box{
    height:30%;
    width:80%;
    margin-top:5%;
    margin-left: 10%;
}
.btn{
    border-radius: 15rpx;
}
#btn-submit{
    color: white;
    background-color: #00C55D;
}
#btn-cancel{
    margin-top: 3%;
}
#username-box{
    height:50%;
    width: 100%;
}
#password-box{
    height:50%;
    width:100%;
}
.label-pic{
    height: 75%;
    width:24%;   
    float:left;
}
#username{
    height: 60%;
    font-size: 25px;
    padding:0px 0px;
    border-bottom:#DCDCDC 1px solid;
}
#password{
    height: 60%;
    font-size: 25px;
    border-bottom:#DCDCDC 1px solid;
}
